<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".CalendarActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/calendar_toolBar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="@color/cyan"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendar_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="Calendar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/calendar_toolBar"
        app:layout_constraintEnd_toEndOf="@+id/calendar_toolBar"
        app:layout_constraintStart_toStartOf="@+id/calendar_toolBar"
        app:layout_constraintTop_toTopOf="@+id/calendar_toolBar"
        tools:text="Calendar" />

    <ImageButton
        android:id="@+id/calendar_home"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:background="@color/cyan"
        android:contentDescription="Home Button"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/calendar_toolBar"
        app:layout_constraintEnd_toStartOf="@+id/calendar_tv"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/white_home_icon_png_9" />

    <ImageButton
        android:id="@+id/addEvent_button"
        android:layout_width="65dp"
        android:layout_height="61dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/cream"
        android:contentDescription="Add Event"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cyanplus" />

    <CalendarView
        android:id="@+id/meeting_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="231dp"
        app:layout_constraintBottom_toTopOf="@+id/addEvent_button"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/calendar_Lv"
        android:layout_width="409dp"
        android:layout_height="229dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/addEvent_button"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
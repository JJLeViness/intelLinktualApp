<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/AddEvent_toolbar"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:background="@color/cyan"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/AddEvent_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:text="Add Event"
            android:textColor="@color/white"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="@+id/AddEvent_toolbar"
            app:layout_constraintEnd_toEndOf="@+id/AddEvent_toolbar"
            app:layout_constraintStart_toStartOf="@+id/AddEvent_toolbar"
            app:layout_constraintTop_toTopOf="@+id/AddEvent_toolbar" />

        <ImageButton
            android:id="@+id/addEvent_imageButton"
            android:layout_width="60dp"
            android:layout_height="51dp"
            app:layout_constraintBottom_toBottomOf="@+id/AddEvent_TV"
            app:layout_constraintEnd_toEndOf="@+id/AddEvent_toolbar"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/AddEvent_TV"
            app:srcCompat="@android:drawable/checkbox_on_background" />

        <TextView
            android:id="@+id/Date_TV"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="76dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Date"
            android:textColor="#043E80"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AddEvent_toolbar" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="228dp"
            android:layout_height="67dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Date_TV" />

        <TextView
            android:id="@+id/Time_TV"
            android:layout_width="81dp"
            android:layout_height="44dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Time"
            android:textColor="#043E80"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="231dp"
            android:layout_height="59dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Time_TV" />

        <TextView
            android:id="@+id/EventName_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Event Name"
            android:textColor="#043E80"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTime" />

        <EditText
            android:id="@+id/enterEventName"
            android:layout_width="259dp"
            android:layout_height="65dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EventName_TV" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>